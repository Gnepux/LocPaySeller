<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        tools:context=".ui.GetCashActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SID（唯一身份号，必输)：" />

        <EditText
            android:id="@+id/et_sid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入唯一身份号"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="收款金额(必输)" />

        <EditText
            android:id="@+id/et_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入金额"
            android:inputType="numberDecimal"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="商户与用户支付校验距离(单位米)" />

        <EditText
            android:id="@+id/et_distance_user_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入支付校验距离"
            android:inputType="number"
            android:singleLine="true"
            android:text="20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="商户注册与商户支付校验距离(单位米)" />

        <EditText
            android:id="@+id/et_distance_seller_register_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入支付校验距离"
            android:inputType="number"
            android:singleLine="true"
            android:text="20" />

        <TextView
            android:id="@+id/tv_scan_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:onClick="scan"
            android:text="扫码收款" />

    </LinearLayout>

</ScrollView>